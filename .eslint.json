{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6, 
        "sourceType": "module", 
        "ecmaFeatures": { "jsx": true }
    },
    "plugins": ["react"],
    "rules": {
        "curly": ["error", "multi"],
        "indent": ["warn", 4],
        "prefer-const": ["error", {
            "destructuring": "all",
            "ignoreReadBeforeAssign": true
        }],
        "prefer-arrow-callback": "error",
        "no-var": "warn",
        "react/prop-types": 0,
        "semi": ["error", "always"],
        "space-before-function-paren": ["warn", "never"]
    }
}